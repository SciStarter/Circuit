<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/api/docs/bulma.css">
    <title><%= language_name %> Content Groups</title>
  </head>
  <body>
    <section class="section">
      <div class="container">
        <a href="..">Back to language list</a>
        <h1 class="title"><%= language_name %> Content Groups</h1>
        <ul style="list-style: none">
          <% for group in groups { %>
          <li><a href="<%= group %>/"><%= group %></a></li>
          <% } %>
        </ul>

        <h1>Add Group</h1>
        <form method="post">
          <input name="group" type="text" placeholder="Group id">
          <input class="button is-primary" type="submit" value="Add">
        </form>
      </div>
    </section>
  </body>
</html>
